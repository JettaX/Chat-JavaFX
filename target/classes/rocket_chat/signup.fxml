<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="rocket_chat.SignUpController"
      onMouseClicked="#onMouseClicked"
      prefHeight="400.0" prefWidth="600.0"
      stylesheets="@styles/common.css, @styles/login.css">
	<HBox fx:id="titleBox" VBox.vgrow="NEVER"/>
	<VBox alignment="CENTER" VBox.vgrow="ALWAYS" spacing="20">
		<TextField fx:id="inputLogin" promptText="login"/>
		<TextField fx:id="inputName" promptText="name"/>
		<TextField fx:id="inputSurname" promptText="surname"/>
		<PasswordField fx:id="inputPasswordOne" promptText="password"/>
		<PasswordField fx:id="inputPasswordTwo" promptText="repeat password"/>
		<Button fx:id="loginButton"
		        text="Sign up"
		        onAction="#signUpButtonAction"/>
	</VBox>
</VBox>
